            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_yang_arsitek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="241dp"
            android:layout_marginTop="810dp"
            android:layout_marginRight="77dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/yang_arsitek"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_lokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="860dp"
            android:layout_marginRight="224dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/lokasi"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_yang_lokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="890dp"
            android:layout_marginRight="224dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/yang_lokasi"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_pembuatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="241dp"
            android:layout_marginTop="860dp"
            android:layout_marginRight="77dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/pembuatan"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_yang_pembuat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="241dp"
            android:layout_marginTop="890dp"
            android:layout_marginRight="77dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/yang_pembuat"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/btn_pesen"
            android:layout_width="329dp"
            android:layout_height="71dp"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="960dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/button_pesan" />

